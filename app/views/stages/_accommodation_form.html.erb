
<script>

    function update_address(address) {
      document.getElementById("pitstop_address").value = address;

    };
</script>
<%= form_for(:pitstop, url: trip_stage_pitstop_path(stage_id: @stage.id), method: :patch) do |f| %>
<%= f.hidden_field :id %>
<%= f.text_field :address, class: "form-control" %>
<%= f.submit class: "btn btn-danger" %>
<% end %>
<br>
<h4>Pick accommodation:</h4>
<% hotel_no = 1 %>
<% @hotels.each do |hotel| %>
<div id="clickChangeAddress" onclick="update_address('<%= hotel[:vicinity] %>');" style="cursor: pointer;">

  <h4><%= hotel_no %>: <%= hotel[:name] %></h4>
  <% hotel_no += 1 %>
  <p><%= hotel[:vicinity] %></p>
  <p><%= rand(40...170) %> â‚¬ a night</p>
  <p>Rating: <%= hotel[:rating] %></p>
  
</div>
<hr>

<% end %>