<% if @trip.title.nil? %>
<%= content_for(:title, "Your trip | PedalMonkey") %>
<% else %>
<%= content_for(:title, "Stage " + @stage.stage_no.to_s + ": " + @trip.title + " | PedalMonkey") %>
<% end %>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<div class="container">
  <div class="col-xs-12">
    <h1><%= @trip.title %>: Stage no. <%= @stage.stage_no %></h1>
    <p style="margin-bottom: -10px; padding-bottom: 0px;"><%= link_to "Home", root_path %> <i class="fa fa-long-arrow-right" aria-hidden="true"></i> <%= link_to @trip.title, trip_path(@trip) %> <i class="fa fa-long-arrow-right" aria-hidden="true"></i> Stage no <%= @stage.stage_no %> </p>
  </div>
  <div class="col-xs-12 col-sm-5">

    <div class="col-xs-12 content-box">
      <div class="content-headline-green">
        <h4>Basic stats</h4>
      </div>
      <p><strong>Date:</strong> <%= @stage.stage_date %></p>
      <p><strong>Start:</strong> <%= @stage.start_point.address %></p>
      <p><strong>Finish:</strong> <%= @stage.end_point.address %></p>
      <p><strong>Distance:</strong> <%= @stage.distance %> KM</p>
    </div>

    <div class="col-xs-12 content-box">
      <div class="content-headline-green">
        <h4>Accommodation</h4>
      </div>
      <% if @stage.end_point.name.nil? %>
      <h4>Choose accommodation: </strong></h4>

      <%= render partial: "accommodation_form" %>
      <% else %>

      <h4><strong><%= @stage.end_point.name %></strong></h4>
      <p>Price: <%= rand(400...1500) %> â‚¬ a night | Rating: <%= @stage.end_point.rating %></p>
      <hr />
      <p><strong>Choose different accomodation:</strong></p>
        <%= render partial: "accommodation_form" %>
      <% end %>
    </div>
  </div>


  <div class="col-xs-12 col-sm-7 sticky-content">

    <div class="col-xs-12 content-box">
      <div class="content-headline-green">
        <h4>Elevation profile</h4>
      </div>
      <div>
        <div id="chart_div"></div>
      </div>
    </div>

     <div class="col-xs-12 content-box">
      <div class="content-headline-green">
        <h4>Stage route</h4>
      </div>
      <div>
        <div id="directions" class="map"></div>
      </div>
    </div>
  </div>


</div> <!-- end sticky content -->

</div>

<% start_address = @stage.start_point.address %>
<% destination_address = @stage.end_point.address %>

<%= content_for(:after_js) do %>

<script>
  google.charts.load('current', {packages: ['corechart', 'bar']});
  google.charts.setOnLoadCallback(drawBasic);

  function drawBasic() {

    var data = new google.visualization.DataTable();
    data.addColumn('string', 'Label');
    data.addColumn('number', 'Meters');

    <% elevation_array = [] %>
    <% @Elevation_samples.each do |sample| %>
    <% elevation_array << ["", sample[:elevation].to_i] %>
    <% end %>
    <% #raise %>

    data.addRows(<%= raw elevation_array %>);

    var options = {
      bar: {
    groupWidth: '100%'
    },
        chartArea: {
          left: '10%',
          top: 19,
          height: 150,
      // leave room for y-axis labels
      width: '87%'
    },
      hAxis: {
        title: 'Stage distance',
         textStyle: {
            fontSize: 50, // or the number you want
            italic: false,
        },
      },
      vAxis: {
        title: 'Elevation in meters'
      },
      legend: 'top',
      colors: ['#5CA886'],
    };

    var chart = new google.visualization.ColumnChart(
      document.getElementById('chart_div'));

    chart.draw(data, options);
  }
</script>

<script>

  var directionsDisplay = new google.maps.DirectionsRenderer();
  var directionsService = new google.maps.DirectionsService();

  function calcRoute() {

    var request = {
      origin:             '<%= start_address %>',
      destination:        '<%= destination_address %>',
      travelMode:         google.maps.TravelMode.BICYCLING
    };

    directionsService.route(request, function(response, status) {
      if (status == google.maps.DirectionsStatus.OK) {
        directionsDisplay.setDirections(response);
        console.log(response)
      }
    });
  };

  calcRoute();

  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'directions'}}, function(){
    directionsDisplay.setMap(handler.getMap());
  });
</script>
<% end %>
