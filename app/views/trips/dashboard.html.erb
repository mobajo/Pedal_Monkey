<div class="container outer-cointainer">
  <h2>Dashboard</h2>
  <div class="row">


    <div class="col-xs-12 content-box-trip">
      <div class="content-headline-green">
        <h4>Hi, <%= current_user.first_name %>!</h4>
      </div>
      <div class="col-xs-12 col-sm-5">
        <h4>You are part of <%= current_user.trips.count %> trips!</h4>
        <p></p>
      </div>
      <div class="col-xs-12 col-sm-7">
        <h4>Profile info</h4>
        <div class="col-xs-6 text-left">
          <p><strong>Name</strong>: <%= current_user.first_name %> <%= current_user.last_name %></p>
          <p><strong>Username</strong>: <%= current_user.username %></p>
          <p><strong>Email:</strong>: <%= current_user.email %></p>
          <p><strong>Description</strong>: <%= current_user.description %></p>
        </div>
        <div class="col-xs-6 text-right">
          <%= cl_image_tag current_user.photo.path, class: "avatar-large avatar-bordered text-right" %>
        </div>
      </div>
    </div>

    <div class="col-xs-12 content-box-trip">
      <div class="content-headline-green">
        <h4>Your trips</h4>
      </div>
      <div class="col-xs-12 col-sm-3">
        <h3>Name:</h3>
      </div>
      <div class="col-xs-12 col-sm-3">
        <h3>Dates</h3>
      </div>
      <div class="col-xs-12 col-sm-3">
        <h3>Distance</h3>
      </div>
      <div class="col-xs-12 col-sm-3">
        <h3>Team members</h3>
      </div>
      <% current_user.trips.each do |trip| %>
      <div class="col-xs-12 col-sm-3">
        <p><%= trip.title %></p>
      </div>
      <div class="col-xs-12 col-sm-3">
        <p><%= trip.stages.first.stage_date %> - <%= trip.stages.first.stage_date %></p>
      </div>
      <div class="col-xs-12 col-sm-3">
        <p><%= trip.distance %> km</p>
      </div>
      <div class="col-xs-12 col-sm-3">
        <p><%= trip.trip_members.count %></p>
      </div>
      <% end %>
    </div>

  </div>
</div>
