<div class="container">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, as: :string, input_html: {id: 'email',value: 'guest@pedalmonkey.world'}, required: false, autofocus: true %>
      <%= f.input :password, as: :string, input_html: {id: 'password',value: '123456'}, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-danger' %>
    </div>
    <br />
    <% end %>

    <%= render "devise/shared/links" %>


  </div>
</div>4

