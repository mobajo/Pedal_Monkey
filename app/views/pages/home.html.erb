<div class="banner" style="background-image: linear-gradient(-225deg, rgba(255,168,85,0.5) 0%, rgba(255,168,85,0.5) 50%), url('https://res.cloudinary.com/mobajo/image/upload/v1511265075/bike-road_xn8wca.jpg');">
  <div class="banner-content">
    <h2>Less planning. More pedaling!</h2>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 content-box-create">
      <div class="content-headline-create">
        <h4>Where do you want to go?</h4>
      </div>
      <%= form_tag(trips_path, method: :post, class: "form-inline") do %>
      <div class="col-xs-12 col-sm-2">
        <div>
          <%= label_tag(:start, "From:") %>
        </div>
        <div class="text-left">
          <%= text_field_tag(:start, nil, placeholder: 'Copenhagen', autofocus: true) %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-2">
        <div class="text-left">
          <%= label_tag(:finish, "To:") %>
        </div>
        <div class="text-left">
          <%= text_field_tag(:finish, nil, placeholder: 'Berlin') %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-2">
        <div class="text-left">
          <%= label_tag(:start_date, "Start date:") %>
        </div>
        <div class="text-left">
          <%= date_field_tag(:start_date, Date.today) %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-2">
        <div class="text-left">
          <%= label_tag(:end_date, "End date:") %>
        </div>
        <div class="text-left">
          <%= date_field_tag(:end_date, Date.today + 1) %> 
        </div>
      </div>
      <div class="col-xs-12 col-sm-2">
        <div class="text-left">
          .
        </div>
        <div class="text-left">
          <%= submit_tag("Let's ride", class: "btn btn-danger btn-pm", style: "width: 100%;") %>
        </div>
      </div>
      <% end %>

